{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "target": "es2021",
    "isolatedModules": false,
    "noEmit": false,
    "noImplicitAny": false,
    "outDir": "build"
  },
  "include": ["src"]
}
